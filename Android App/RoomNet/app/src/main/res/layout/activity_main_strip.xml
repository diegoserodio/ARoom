<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad3"
    tools:context="com.example.diego.roomnet.MainStrip">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Vermelho:"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="140dp"/>
        <SeekBar
            android:id="@+id/seekRed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="128"
            android:progress="64"/>
        <TextView
            android:id="@+id/txtGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Verde:"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="140dp"/>
        <SeekBar
            android:id="@+id/seekGreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="128"
            android:progress="64"/>
        <TextView
            android:id="@+id/txtBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Azul:"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="140dp"/>
        <SeekBar
            android:id="@+id/seekBlue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="128"
            android:progress="64"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:padding="10dp">
        <Button
            android:id="@+id/btnStripOn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_power_settings_new_black_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtEfeitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="EFEITOS:"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="140dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btnEffectMinus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/gray"
                        android:text="&lt;"
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:layout_marginRight="5dp"/>
                    <Button
                    android:id="@+id/btnEffect"
                    android:layout_width="210dp"
                    android:layout_height="50dp"
                    android:background="@color/gray"
                    android:text="Nenhum"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                    <Button
                        android:id="@+id/btnEffectPlus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/gray"
                        android:text="&gt;"
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnMusic"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/gray"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:text="Music"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
