<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="305dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@color/popupBackground"
    tools:context="com.example.diego.roomnet.RoomNet">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">
        <Button
            android:id="@+id/btnErro"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/error"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLamp"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/lamp_off"
            android:text="" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/lmpOn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="Ligar" />
    <Button
        android:id="@+id/lmpOff"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:padding="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="Desligar" />

</LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <Button
        android:id="@+id/btnVent"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:background="@drawable/vent_off"
        android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/ventOn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="@color/green"
                android:textColor="@color/white"
                android:text="Ligar" />
            <Button
                android:id="@+id/ventOff"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:padding="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="@color/red"
                android:textColor="@color/white"
                android:text="Desligar" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNatal"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@drawable/lights_off"
                android:text="" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/natalOn"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@color/green"
                    android:textColor="@color/white"
                    android:text="Ligar" />
                <Button
                    android:id="@+id/natalOff"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:padding="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@color/red"
                    android:textColor="@color/white"
                    android:text="Desligar" />

            </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnvago"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_live_help_black_24dp"
                android:text="" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/vagoOn"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@color/green"
                    android:textColor="@color/white"
                    android:text="Ligar" />
                <Button
                    android:id="@+id/VagoOff"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:padding="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@color/red"
                    android:textColor="@color/white"
                    android:text="Desligar" />

            </LinearLayout>
        </LinearLayout>
    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"/>

</LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>